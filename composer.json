{
    "name": "yumemi/ranking-cli",
    "description": "ゲームのランキング集計CLIプログラム",
    "type": "project",
    "require": {
        "php": "^8.2",
        "php-di/php-di": "^7.0",
        "slim/slim": "4.14.0",
        "slim/psr7": "^1.7",
        "slim/http": "^1.4",
        "slim/twig-view": "^3.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "__tests__/"
        }
    },
    "scripts": {
        "test": "php vendor/bin/phpunit",
        "test-html": "php vendor/bin/phpunit --coverage-html coverage_report"
    }
}

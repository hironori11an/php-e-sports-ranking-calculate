{
    "name": "yumemi/ranking-cli",
    "description": "ゲームのランキング集計CLIプログラム",
    "type": "project",
    "require": {
        "php": "^8.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "__tests__/"
        }
    },
    "scripts": {
        "test": "php -d xdebug.mode=coverage vendor/bin/phpunit",
        "test-html": "php -d xdebug.mode=coverage vendor/bin/phpunit --coverage-html coverage_report"
    }
} 